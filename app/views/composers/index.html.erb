<h1>Listing composers</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @composers.each do |composer| %>
  <tr>
    <td><%=h composer.name %></td>
    <td><%= link_to 'Show', composer %></td>
    <td><%= link_to 'Edit', edit_composer_path(composer) %></td>
    <td><%= link_to 'Destroy', composer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New composer', new_composer_path %>